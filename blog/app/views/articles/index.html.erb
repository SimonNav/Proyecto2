<h1 class="mb-4">List of Articles</h1>

<table class="table table-bordered">
  <thead>
    <tr>
      <th>Title</th>
      <th>Text</th>
      <th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td><%= truncate(article.text, length: 100) %></td>
        <td><%= link_to 'Show', article_path(article), class: "btn btn-info btn-sm" %></td>

        <% if user_signed_in? && article.user == current_user %>
          <td><%= link_to 'Edit', edit_article_path(article), class: "btn btn-warning btn-sm" %></td>
          <td><%= button_to 'Destroy', article_path(article), method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
  <%= link_to 'New Article', new_article_path, class: "btn btn-primary" %>
<% end %>
